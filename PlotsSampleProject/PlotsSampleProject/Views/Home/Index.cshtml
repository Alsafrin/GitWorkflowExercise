@using PlotsSampleProject.Models
@model  FindNearByPlacesAndThings
@{
    ViewBag.Title = "Home Page";
}
    <div class="main-banner">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="top-text header-text">
                        <h6>Over 36,500+ Active Listings</h6>
                        <h2>Find Nearby Places &amp; Things</h2>
                    </div>
                </div>
                <div class="col-lg-12">
                    <form id="search-form" name="gs" method="submit" role="search" action="#">
                        <div class="row">
                            <div class="col-lg-3 align-self-center">
                                @Html.DropDownListFor(m => m.SelectAreas, new SelectList(ViewBag.Areas), "All Areas", htmlAttributes: new {  @class = "form-control"})
                            </div>
                            <div class="col-lg-3 align-self-center">
                                @Html.TextBoxFor(m => m.EnterLocation, htmlAttributes:  new { @Class = "form-control", placeholder = "Enter a location" })
                                @Html.ValidationMessageFor(m => m.EnterLocation, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-3 align-self-center">
                                @Html.DropDownListFor(m => m.PriceRange, new SelectList(ViewBag.Pricelist), "Price Range", htmlAttributes: new { @class = "form-control" })
                            </div>
                            <div class="col-lg-3">
                                <fieldset>
                                    <button class="main-button"><i class="fa fa-search"></i> Search Now</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-lg-10 offset-lg-1">
                    <ul class="categories">
                        @foreach (var i in ViewBag.CategoryList)
                        {                     
                                <li><a href="#"><span class="icon"><img src=@i.CategoryImagePath alt=@i.CategoryTitle></span> @i.CategoryTitle</a></li>                           
                        }
                     </ul>
                </div>
            </div>
         </div>
    </div>

    <div class="popular-categories">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-heading">
                        <h2>Popular Categories</h2>
                        <h6>Check Them Out</h6>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="naccs">
                        <div class="grid">
                            <div class="row">
                                <div class="col-lg-3">
                                    <div class="menu">

                                        @foreach (var i in ViewBag.CategoryList)
                                        {
                                            if (i.CategoryID == 1)
                                            {

                                            <div class="first-thumb active">
                                                <div class="thumb">
                                                    <span class="icon"><img src=@i.CategoryImagePath alt=""></span>
                                                    @i.CategoryTitle
                                                </div>
                                            </div>

                                            }
                                            else if (i.CategoryID != 1 && i.CategoryID != 5)
                                            {
                                                <div>
                                                    <div class="thumb">
                                                        <span class="icon"><img src=@i.CategoryImagePath alt=""></span>
                                                        @i.CategoryTitle
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="last-thumb">
                                                    <div class="thumb">
                                                        <span class="icon"><img src=@i.CategoryImagePath alt=""></span>
                                                        @i.CategoryTitle
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>
                                 </div>
                                <div class="col-lg-9 align-self-center">
                                    <ul class="nacc">
                                        @foreach (var i in ViewBag.lst)
                                        {
                                            if (i.ID == 1)
                                            {
                                                <li class="active">
                                                    <div>
                                                        <div class="thumb">
                                                            <div class="row">
                                                                <div class="col-lg-5 align-self-center">
                                                                    <div class="left-text">
                                                                        <h4>@i.Title</h4>
                                                                        <p>@i.Description</p>
                                                                        <div class="main-white-button"><a href="#"><i class="fa fa-eye"></i>@i.ButtonValue</a></div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-lg-7 align-self-center">
                                                                    <div class="right-image">
                                                                        <img src=@i.ImagePath alt="">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </li>
                                            }
                                            else
                                            {
                                                <li>
                                                    <div>
                                                        <div class="thumb">
                                                            <div class="row">
                                                                <div class="col-lg-5 align-self-center">
                                                                    <div class="left-text">
                                                                        <h4>@i.Title</h4>
                                                                        <p>@i.Description</p>
                                                                        <div class="main-white-button"><a href="#"><i class="fa fa-eye"></i>@i.ButtonValue</a></div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-lg-7 align-self-center">
                                                                    <div class="right-image">
                                                                        <img src=@i.ImagePath alt="">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </li>
                                            }
                                        }                                       
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="recent-listing">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-heading">
                        <h2>Recent Listing</h2>
